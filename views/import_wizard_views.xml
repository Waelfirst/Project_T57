<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Import Components Wizard Form -->
    <record id="view_import_components_wizard_form" model="ir.ui.view">
        <field name="name">import.components.wizard.form</field>
        <field name="model">import.components.wizard</field>
        <field name="arch" type="xml">
            <form string="Import from Excel">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="import_mode" invisible="1"/>
                            <span invisible="import_mode != 'components'">üì¶ Import Components</span>
                            <span invisible="import_mode != 'bom_materials'">üî© Import BOM Materials</span>
                            <span invisible="import_mode != 'bom_operations'">‚öôÔ∏è Import BOM Operations</span>
                            <span invisible="import_mode != 'all'">üìã Import All Data</span>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="pricing_id" invisible="1"/>
                            <field name="product_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="excel_file" filename="filename"/>
                            <field name="filename" invisible="1"/>
                        </group>
                    </group>
                    <group string="üìã Instructions">
                        <field name="notes" nolabel="1" readonly="1"
                               widget="text" class="oe_read_only"/>
                    </group>
                </sheet>
                <footer>
                    <button string="üì• Import" name="action_import"
                            type="object" class="btn-primary"/>
                    <button string="üìÑ Download Template" name="action_download_template"
                            type="object" class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>