    <!-- Calendar View (Optional - for timeline view) -->
    <record id="view_project_definition_calendar" model="ir.ui.view">
        <field name="name">project.definition.calendar</field>
        <field name="model">project.definition</field>
        <field name="arch" type="xml">
            <calendar string="Project Timeline"
                      date_start="start_date"
                      date_stop="end_date"
                      color="state"
                      mode="month">
                <field name="project_name"/>
                <field name="partner_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Pivot View (Optional - for analysis) -->
    <record id="view_project_definition_pivot" model="ir.ui.view">
        <field name="name">project.definition.pivot</field>
        <field name="model">project.definition</field>
        <field name="arch" type="xml">
            <pivot string="Project Analysis">
                <field name="partner_id" type="row"/>
                <field name="state" type="col"/>
                <field name="total_cost" type="measure"/>
                <field name="total_sale" type="measure"/>
                <field name="total_profit" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Graph View (Optional - for charts) -->
