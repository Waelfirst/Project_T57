<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_project_definition_tree" model="ir.ui.view">
        <field name="name">project.definition.tree</field>
        <field name="model">project.definition</field>
        <field name="arch" type="xml">
            <tree string="Project Definitions"
                  decoration-success="state=='done'"
                  decoration-info="state in ('pricing','planning','processing')"
                  decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="project_name"/>
                <field name="partner_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="total_cost" sum="Total Cost"/>
                <field name="total_sale" sum="Total Sale"/>
                <field name="total_profit" sum="Total Profit"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_project_definition_form" model="ir.ui.view">
        <field name="name">project.definition.form</field>
        <field name="model">project.definition</field>
        <field name="arch" type="xml">
            <form string="Project Definition">
                <header>
                    <button name="action_pricing" string="Move to Pricing" type="object"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_planning" string="Move to Planning" type="object"
                            class="oe_highlight" invisible="state != 'pricing'"/>
                    <button name="action_processing" string="Move to Processing" type="object"
                            class="oe_highlight" invisible="state != 'planning'"/>
                    <button name="action_done" string="Mark as Done" type="object"
                            class="oe_highlight" invisible="state != 'processing'"/>

                    <button name="action_export_project_excel" string="ðŸ“Š Export Excel"
                            type="object" class="btn-success"/>

                    <button name="action_cancel" string="Cancel" type="object"
                            invisible="state in ('done','cancelled')"/>
                    <button name="action_draft" string="Reset to Draft" type="object"
                            invisible="state not in ('cancelled','pricing')"/>

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,pricing,planning,processing,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Pricings Smart Button -->
                        <button name="action_view_pricings" type="object"
                                class="oe_stat_button" icon="fa-money"
                                invisible="pricing_count == 0">
                            <field name="pricing_count" widget="statbutton" string="Pricings"/>
                        </button>

                        <!-- Plannings Smart Button -->
                        <button name="action_view_plannings" type="object"
                                class="oe_stat_button" icon="fa-calendar"
                                invisible="planning_count == 0">
                            <field name="planning_count" widget="statbutton" string="Plannings"/>
                        </button>

                        <!-- Sales Orders Smart Button -->
                        <button name="action_view_sales_orders" type="object"
                                class="oe_stat_button" icon="fa-shopping-cart"
                                invisible="sales_order_count == 0">
                            <field name="sales_order_count" widget="statbutton" string="Sales Orders"/>
                        </button>

                        <!-- Work Order Executions Smart Button -->
                        <button name="action_view_executions" type="object"
                                class="oe_stat_button" icon="fa-cogs"
                                invisible="execution_count == 0">
                            <field name="execution_count" widget="statbutton" string="Executions"/>
                        </button>

                        <!-- Cost Estimations Smart Button - NEW -->
                        <button name="action_view_estimations" type="object"
                                class="oe_stat_button" icon="fa-calculator"
                                invisible="estimation_count == 0">
                            <field name="estimation_count" widget="statbutton" string="Estimations"/>
                        </button>

                        <!-- Create New Estimation Button - NEW -->
                        <button name="action_create_cost_estimation" type="object"
                                class="oe_stat_button" icon="fa-file-excel-o"
                                help="Create new cost estimation Excel file">
                            <div class="o_stat_info">
                                <span class="o_stat_text">New</span>
                                <span class="o_stat_text">Estimation</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <!-- Auto-Update Banner -->
                    <div class="alert alert-info" role="alert" invisible="not auto_update_state">
                        <strong>ðŸ”„ Auto-Update Enabled</strong>
                        <p class="mb-0">Project state will automatically update based on actual activities (Pricing, Planning, Work Orders)</p>
                    </div>

                    <group>
                        <group>
                            <field name="project_name" placeholder="Enter project name..."/>
                            <field name="partner_id" placeholder="Select customer..."/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="auto_update_state" widget="boolean_toggle"
                                   help="Automatically update project state based on activities (Pricing â†’ Planning â†’ Processing â†’ Done)"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Project Products">
                            <field name="product_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="weight"/>
                                    <field name="cost_price"/>
                                    <field name="sale_price"/>
                                    <field name="total_cost" sum="Total Cost"/>
                                    <field name="total_sale" sum="Total Sale"/>
                                    <field name="profit" sum="Total Profit"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_cost" widget="monetary"/>
                                <field name="total_sale" widget="monetary"/>
                                <div class="oe_subtotal_footer_separator"/>
                                <field name="total_profit" widget="monetary"
                                       class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>

                        <page string="Notes">
                            <field name="notes" placeholder="Add project notes here..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View - FIXED: Removed estimation_count filter -->
    <record id="view_project_definition_search" model="ir.ui.view">
        <field name="name">project.definition.search</field>
        <field name="model">project.definition</field>
        <field name="arch" type="xml">
            <search string="Search Project">
                <field name="name"/>
                <field name="project_name"/>
                <field name="partner_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Pricing" name="pricing" domain="[('state','=','pricing')]"/>
                <filter string="Planning" name="planning" domain="[('state','=','planning')]"/>
                <filter string="Processing" name="processing" domain="[('state','=','processing')]"/>
                <filter string="Done" name="done" domain="[('state','=','done')]"/>
                <separator/>
                <filter string="Active Projects" name="active_projects"
                        domain="[('state','in',['pricing','planning','processing'])]"/>
                <filter string="Auto-Update Enabled" name="auto_update"
                        domain="[('auto_update_state','=',True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Customer" name="group_customer" context="{'group_by':'partner_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Start Date" name="group_start_date" context="{'group_by':'start_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_project_definition" model="ir.actions.act_window">
        <field name="name">Project Definitions</field>
        <field name="res_model">project.definition</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active_projects': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first project definition!
            </p>
            <p>
                Define projects with finished products, quantities, and pricing.<br/>
                <b>Workflow:</b> Draft â†’ Pricing â†’ Planning â†’ Processing â†’ Done<br/>
                <br/>
                <b>ðŸ”„ Auto-Update Feature:</b><br/>
                Enable auto-update to automatically track project progress based on actual activities:<br/>
                â€¢ Creating Pricing â†’ Moves to "Pricing"<br/>
                â€¢ Creating Material Planning â†’ Moves to "Planning"<br/>
                â€¢ Starting Work Orders â†’ Moves to "Processing"<br/>
                â€¢ Completing All Work â†’ Moves to "Done"<br/>
                <br/>
                <b>ðŸ’¡ Cost Estimation Feature:</b><br/>
                â€¢ Click "New Estimation" button to create Excel-based cost estimations<br/>
                â€¢ Edit prices in Excel and import back to update project costs<br/>
                â€¢ Track all estimations with the "Estimations" smart button
            </p>
        </field>
    </record>

    <!-- Kanban View (Optional - for better visualization) -->
    <record id="view_project_definition_kanban" model="ir.ui.view">
        <field name="name">project.definition.kanban</field>
        <field name="model">project.definition</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="project_name"/>
                <field name="partner_id"/>
                <field name="total_cost"/>
                <field name="total_sale"/>
                <field name="total_profit"/>
                <field name="estimation_count"/>
                <field name="pricing_count"/>
                <field name="planning_count"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="project_name"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="partner_id"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge badge-pill" title="Total Sale">
                                        <i class="fa fa-money"/>
                                        <field name="total_sale" widget="monetary"/>
                                    </span>
                                    <span class="badge badge-pill badge-success" title="Profit">
                                        <i class="fa fa-line-chart"/>
                                        <field name="total_profit" widget="monetary"/>
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span class="badge badge-pill badge-info"
                                          title="Estimations"
                                          invisible="estimation_count == 0">
                                        <i class="fa fa-calculator"/>
                                        <field name="estimation_count"/>
                                    </span>
                                    <span class="badge badge-pill badge-primary"
                                          title="Pricings"
                                          invisible="pricing_count == 0">
                                        <i class="fa fa-tag"/>
                                        <field name="pricing_count"/>
                                    </span>
                                    <span class="badge badge-pill badge-warning"
                                          title="Plannings"
                                          invisible="planning_count == 0">
                                        <i class="fa fa-tasks"/>
                                        <field name="planning_count"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

