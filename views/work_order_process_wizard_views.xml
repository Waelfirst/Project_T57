<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Process Work Orders Wizard Form -->
    <record id="view_work_order_process_wizard_form" model="ir.ui.view">
        <field name="name">work.order.process.wizard.form</field>
        <field name="model">work.order.process.wizard</field>
        <field name="arch" type="xml">
            <form string="Process Work Orders">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <span>Process Selected Work Orders</span>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="execution_id" readonly="1"/>
                            <field name="total_materials"/>
                            <field name="total_material_weight"/>
                        </group>
                        <group>
                            <field name="production_ids" widget="many2many_tags" readonly="1"/>
                            <field name="total_operations"/>
                            <field name="total_operation_hours"/>
                        </group>
                    </group>
                    
                    <div class="alert alert-info" role="alert">
                        <strong>üìã Review and Edit:</strong>
                        <ul class="mb-0">
                            <li>‚úèÔ∏è Edit material quantities to issue below</li>
                            <li>‚è±Ô∏è Edit operation hours before completing</li>
                            <li>üöÄ Click "Process All" to issue materials and complete operations</li>
                        </ul>
                    </div>
                    
                    <notebook>
                        <!-- Materials Tab -->
                        <page string="Materials to Issue" name="materials">
                            <field name="material_line_ids">
                                <tree editable="bottom" decoration-success="can_issue==True" 
                                      decoration-warning="can_issue==False">
                                    <field name="production_id"/>
                                    <field name="product_id"/>
                                    <field name="required_qty"/>
                                    <field name="available_qty"/>
                                    <field name="qty_to_issue" 
                                           decoration-bf="1"
                                           decoration-danger="qty_to_issue > available_qty"/>
                                    <field name="uom_id"/>
                                    <field name="unit_weight"/>
                                    <field name="total_weight"/>
                                    <field name="can_issue" invisible="1"/>
                                    <field name="move_id" invisible="1"/>
                                </tree>
                            </field>
                            
                            <group class="mt-3">
                                <div class="alert alert-warning" role="alert" invisible="not material_line_ids">
                                    <strong>‚ö†Ô∏è Important:</strong>
                                    <ul class="mb-0">
                                        <li>Red quantities exceed available stock</li>
                                        <li>Edit "Qty to Issue" to adjust amounts</li>
                                        <li>Only materials with qty &gt; 0 will be issued</li>
                                    </ul>
                                </div>
                            </group>
                        </page>
                        
                        <!-- Operations Tab -->
                        <page string="Operations to Complete" name="operations">
                            <field name="operation_line_ids">
                                <tree editable="bottom" decoration-success="state=='done'" 
                                      decoration-info="state=='progress'"
                                      decoration-muted="state in ('pending','ready')">
                                    <field name="production_id"/>
                                    <field name="operation_id"/>
                                    <field name="workcenter_id"/>
                                    <field name="state"/>
                                    <field name="qty_to_produce"/>
                                    <field name="qty_produced"/>
                                    <field name="qty_remaining"/>
                                    <field name="duration_hours" 
                                           decoration-bf="1"
                                           string="Hours"/>
                                    <field name="duration_minutes" readonly="1"/>
                                    <field name="can_complete" invisible="1"/>
                                    <field name="workorder_id" invisible="1"/>
                                </tree>
                            </field>
                            
                            <group class="mt-3">
                                <div class="alert alert-info" role="alert" invisible="not operation_line_ids">
                                    <strong>‚è±Ô∏è Time Tracking:</strong>
                                    <ul class="mb-0">
                                        <li>Edit "Hours" column to set actual time spent</li>
                                        <li>Minutes are calculated automatically</li>
                                        <li>Time will be recorded for each operation</li>
                                    </ul>
                                </div>
                            </group>
                        </page>
                        
                        <!-- Summary Tab -->
                        <page string="Summary" name="summary">
                            <group>
                                <group string="Materials Summary">
                                    <field name="total_materials" readonly="1"/>
                                    <field name="total_material_weight" readonly="1"/>
                                </group>
                                <group string="Operations Summary">
                                    <field name="total_operations" readonly="1"/>
                                    <field name="total_operation_hours" readonly="1"/>
                                </group>
                            </group>
                            
                            <div class="alert alert-success mt-3" role="alert">
                                <h4 class="alert-heading">üöÄ Ready to Process!</h4>
                                <p>When you click "Process All", the system will:</p>
                                <ul>
                                    <li>‚úÖ Issue all materials with qty &gt; 0</li>
                                    <li>‚úÖ Complete all operations</li>
                                    <li>‚úÖ Record time for each operation</li>
                                    <li>‚úÖ Update production order status</li>
                                </ul>
                                <hr/>
                                <p class="mb-0">Review the Materials and Operations tabs before processing.</p>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                
                <footer>
                    <button string="Process All" name="action_process_all" type="object" 
                            class="btn-primary"
                            confirm="This will issue all materials and complete all operations. Continue?"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_work_order_process_wizard" model="ir.actions.act_window">
        <field name="name">Process Work Orders</field>
        <field name="res_model">work.order.process.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_work_order_execution"/>
    </record>

</odoo>
